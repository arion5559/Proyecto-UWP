        <TextBlock HorizontalAlignment="Center" Height="172" TextWrapping="Wrap" Text="Registro" VerticalAlignment="Top" Width="746" Margin="0,75,0,0" TextAlignment="Center" FontSize="72" FontFamily="Engravers MT"/>

